include CONTRIBUTING.md
include COPYING.md
include README.md
include CHANGES.txt
include MANIFEST.in
include pyproject.toml
include pytest.ini
include traitlets/py.typed

exclude .pre-commit-config.yaml
exclude .git-blame-ignore-revs
exclude readthedocs.yml
exclude .mailmap

# Documentation
graft docs
exclude docs/\#*

# Examples
graft examples

# docs subdirs we want to skip
prune docs/build
prune docs/gh-pages
prune docs/dist

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
